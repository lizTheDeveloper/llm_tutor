# Test Environment Configuration
# This file is used by pytest for running tests
# DO NOT use production values here

# Application
APP_NAME=CodeMentor-Test
APP_ENV=test
DEBUG=false
LOG_LEVEL=INFO

# Database (test database)
DATABASE_URL=postgresql+asyncpg://llmtutor:llm_tutor_2024_secure@localhost/llm_tutor_test
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (test instance or mock)
REDIS_URL=redis://localhost:6379/15
REDIS_SESSION_DB=15

# Security (test values - NOT for production)
SECRET_KEY=test_secret_key_minimum_32_characters_long_12345678
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Frontend/Backend URLs (test)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# LLM Provider (test/mock)
LLM_PROVIDER=groq
GROQ_API_KEY=test-groq-api-key-for-mocking
GROQ_MODEL=llama-3.1-8b-instant

# OAuth (disabled for tests)
OAUTH_ENABLED=false
GITHUB_CLIENT_ID=test_github_client_id
GITHUB_CLIENT_SECRET=test_github_client_secret
GOOGLE_CLIENT_ID=test_google_client_id
GOOGLE_CLIENT_SECRET=test_google_client_secret

# Email (mock)
EMAIL_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=test
SMTP_PASSWORD=test
SMTP_FROM_EMAIL=test@example.com
SMTP_FROM_NAME=CodeMentor Test

# Monitoring (disabled for tests)
SENTRY_ENABLED=false
SENTRY_DSN=
METRICS_ENABLED=false

# Rate Limiting (relaxed for tests)
RATE_LIMIT_ENABLED=false
