# Application Configuration
APP_NAME=CodeMentor
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
HOST=0.0.0.0
PORT=5000

# URLs (IMPORTANT: Update these for production)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/codementor
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=1

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# OAuth Providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# LLM Providers
GROQ_API_KEY=your-groq-api-key
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_PRIMARY_PROVIDER=groq
LLM_FALLBACK_PROVIDER=openai
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.7

# GROQ-specific
GROQ_MODEL=llama-3.3-70b-versatile
GROQ_COMPOUND_MODEL=groq/compound
GROQ_RATE_LIMIT_RPM=30
GROQ_RATE_LIMIT_RPD=14400
GROQ_MAX_RETRIES=3
GROQ_TIMEOUT=30

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@codementor.io

# Matrix Chat (Optional)
MATRIX_HOMESERVER=https://matrix.org
MATRIX_ACCESS_TOKEN=your-matrix-access-token

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
